---
import type { CollectionEntry } from 'astro:content';
import BaseLayout from './BaseLayout.astro';

interface Props {
  entry: CollectionEntry<'analyses'>;
}

const { entry } = Astro.props;
const { title, author, date, summary, tags, category } = entry.data;

const categoryColors = {
  serious: {
    bg: 'bg-blue-50',
    text: 'text-blue-800',
    border: 'border-blue-200',
    accent: 'text-blue-600',
  },
  exploratory: {
    bg: 'bg-green-50', 
    text: 'text-green-800',
    border: 'border-green-200',
    accent: 'text-green-600',
  },
  whimsical: {
    bg: 'bg-purple-50',
    text: 'text-purple-800', 
    border: 'border-purple-200',
    accent: 'text-purple-600',
  },
};

const colors = category ? categoryColors[category] : categoryColors.serious;
---

<BaseLayout 
  title={`${title} | Census Monkey Typewriter`}
  description={summary}
>
  <!-- Breadcrumb -->
  <div class="bg-secondary-50 border-b border-secondary-200">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <nav class="flex items-center space-x-2 text-sm">
        <a href="/" class="text-secondary-600 hover:text-primary-600 transition-colors">Home</a>
        <svg class="w-4 h-4 text-secondary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <a href="/analyses/" class="text-secondary-600 hover:text-primary-600 transition-colors">Analyses</a>
        <svg class="w-4 h-4 text-secondary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <span class="text-secondary-900 font-medium">Current Analysis</span>
      </nav>
    </div>
  </div>

  <!-- Article Header -->
  <div class="py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-5xl mx-auto">
      <article>
        <!-- Category & Meta -->
        <div class="flex flex-wrap items-center gap-4 mb-6">
          {category && (
            <span class={`inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold ${colors.bg} ${colors.text} ${colors.border} border`}>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                {category === 'serious' && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                )}
                {category === 'exploratory' && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                )}
                {category === 'whimsical' && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1.586a1 1 0 01.707.293l2.414 2.414a1 1 0 00.707.293H15M6 20l4-16m4 16l4-16"></path>
                )}
              </svg>
              {category.charAt(0).toUpperCase() + category.slice(1)} Research
            </span>
          )}
          
          <time class="text-secondary-500 text-sm flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            {date.toLocaleDateString('en-US', { 
              year: 'numeric', 
              month: 'long', 
              day: 'numeric' 
            })}
          </time>
          
          <span class="text-secondary-500 text-sm flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            {author}
          </span>
        </div>
        
        <!-- Title -->
        <h1 class="text-4xl md:text-5xl font-bold text-secondary-900 leading-tight mb-6 font-serif">
          {title}
        </h1>
        
        <!-- Summary -->
        <div class={`${colors.bg} ${colors.border} border-l-4 border-l-current rounded-r-xl p-6 mb-8`}>
          <p class="text-lg text-secondary-700 leading-relaxed font-medium">
            {summary}
          </p>
        </div>
        
        <!-- Tags -->
        {tags.length > 0 && (
          <div class="flex flex-wrap gap-2 mb-8">
            {tags.map(tag => (
              <span class="bg-secondary-100 text-secondary-700 px-3 py-1 text-sm rounded-full hover:bg-secondary-200 transition-colors">
                #{tag}
              </span>
            ))}
          </div>
        )}
      </article>
    </div>
  </div>

  <!-- Article Content -->
  <div class="pb-16 px-4 sm:px-6 lg:px-8">
    <div class="max-w-5xl mx-auto">
      <div class="bg-white rounded-2xl shadow-lg border border-secondary-200 overflow-hidden">
        <div class="p-8 lg:p-12">
          <div class="prose prose-lg max-w-none prose-headings:text-secondary-900 prose-p:text-secondary-700 prose-strong:text-secondary-900 prose-a:text-primary-600 hover:prose-a:text-primary-700">
            <slot />
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Back to Analyses -->
  <div class="pb-16 px-4 sm:px-6 lg:px-8">
    <div class="max-w-5xl mx-auto">
      <div class="text-center">
        <a href="/analyses/" class="inline-flex items-center bg-secondary-100 hover:bg-secondary-200 text-secondary-700 px-6 py-3 rounded-lg font-semibold transition-all">
          <svg class="mr-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to All Analyses
        </a>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .prose img {
    @apply rounded-xl shadow-lg border border-secondary-200 my-8;
  }
  
  .prose figure {
    @apply my-8;
  }
  
  .prose figcaption {
    @apply text-center text-secondary-600 text-sm mt-4 italic;
  }
  
  .prose table {
    @apply border border-secondary-200 rounded-lg overflow-hidden shadow-sm;
  }
  
  .prose th {
    @apply bg-secondary-50 text-secondary-900 font-semibold;
  }
  
  .prose td {
    @apply border-b border-secondary-100;
  }
  
  .prose blockquote {
    @apply border-l-4 border-l-primary-500 bg-primary-50 rounded-r-lg;
  }
  
  .prose code {
    @apply bg-secondary-100 text-secondary-800 px-2 py-1 rounded font-mono text-sm;
  }
</style>