---
import type { CollectionEntry } from 'astro:content';

interface Props {
  entry: CollectionEntry<'analyses'>;
}

const { entry } = Astro.props;
const { title, author, date, summary, tags, category } = entry.data;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={summary} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | Census Monkey Typewriter</title>
    
    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="article" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={summary} />
    <meta property="og:site_name" content="Census Monkey Typewriter" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={summary} />
  </head>
  <body class="bg-gray-50 min-h-screen">
    <header class="bg-white shadow-sm border-b">
      <div class="max-w-4xl mx-auto px-4 py-6">
        <div class="flex items-center justify-between">
          <a href="/" class="text-2xl font-bold text-gray-900 hover:text-blue-600 transition-colors">
            Census Monkey Typewriter
          </a>
          <nav class="space-x-6">
            <a href="/" class="text-gray-600 hover:text-gray-900 transition-colors">Home</a>
            <a href="/about/" class="text-gray-600 hover:text-gray-900 transition-colors">About</a>
          </nav>
        </div>
      </div>
    </header>

    <main class="max-w-4xl mx-auto px-4 py-8">
      <article class="bg-white rounded-lg shadow-sm p-8">
        <header class="mb-8">
          <div class="flex items-center gap-2 mb-4">
            {category && (
              <span class={`px-3 py-1 text-sm font-medium rounded-full ${
                category === 'serious' ? 'bg-blue-100 text-blue-800' :
                category === 'exploratory' ? 'bg-green-100 text-green-800' :
                'bg-purple-100 text-purple-800'
              }`}>
                {category}
              </span>
            )}
            <time class="text-gray-500 text-sm">
              {date.toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
              })}
            </time>
          </div>
          
          <h1 class="text-4xl font-bold text-gray-900 leading-tight mb-4">
            {title}
          </h1>
          
          <p class="text-xl text-gray-600 leading-relaxed mb-6">
            {summary}
          </p>
          
          <div class="flex items-center justify-between text-sm text-gray-500">
            <span>By {author}</span>
            {tags.length > 0 && (
              <div class="flex gap-2">
                {tags.map(tag => (
                  <span class="bg-gray-100 text-gray-700 px-2 py-1 rounded">
                    #{tag}
                  </span>
                ))}
              </div>
            )}
          </div>
        </header>

        <div class="prose prose-lg max-w-none prose-headings:text-gray-900 prose-p:text-gray-700 prose-strong:text-gray-900">
          <slot />
        </div>
      </article>
    </main>

    <footer class="bg-gray-100 mt-16">
      <div class="max-w-4xl mx-auto px-4 py-8 text-center text-gray-600">
        <p>&copy; 2025 Census Monkey Typewriter. Experimental AI-generated research.</p>
      </div>
    </footer>
  </body>
</html>

<style>
  .prose img {
    @apply rounded-lg shadow-sm;
  }
  
  .prose figure {
    @apply my-8;
  }
  
  .prose figcaption {
    @apply text-center text-gray-600 text-sm mt-2;
  }
</style>