---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

const analyses = await getCollection('analyses');
const sortedAnalyses = analyses
  .filter(analysis => !analysis.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const featuredAnalysis = sortedAnalyses.find(a => a.data.featured) || sortedAnalyses[0];
const recentAnalyses = sortedAnalyses.slice(0, 6);

const categorizedAnalyses = {
  serious: sortedAnalyses.filter(a => a.data.category === 'serious'),
  exploratory: sortedAnalyses.filter(a => a.data.category === 'exploratory'),
  whimsical: sortedAnalyses.filter(a => a.data.category === 'whimsical'),
};

const categoryInfo = {
  serious: {
    title: 'Serious Research',
    description: 'Policy-relevant analyses with real-world applications',
    color: 'accent-serious',
    bgColor: 'bg-blue-50',
    textColor: 'text-blue-900',
    borderColor: 'border-blue-200',
  },
  exploratory: {
    title: 'Exploratory Studies',
    description: 'Novel methodological approaches and data discovery',
    color: 'accent-exploratory',
    bgColor: 'bg-green-50',
    textColor: 'text-green-900',
    borderColor: 'border-green-200',
  },
  whimsical: {
    title: 'Whimsical Investigations',
    description: 'Playful hypotheses testing unconventional theories',
    color: 'accent-whimsical',
    bgColor: 'bg-purple-50',
    textColor: 'text-purple-900',
    borderColor: 'border-purple-200',
  },
};
---

<BaseLayout 
  title="Census Monkey Typewriter" 
  description="AI-generated social science research using US Census data. A collaboration between humans and large language models to explore novel hypotheses and analytical approaches."
>
  <!-- Hero Section -->
  <section class="relative py-20 px-4 sm:px-6 lg:px-8 overflow-hidden">
    <div class="max-w-7xl mx-auto">
      <div class="text-center">
        <h1 class="text-5xl md:text-6xl font-bold text-secondary-900 mb-6 font-serif">
          Census Monkey
          <span class="block text-primary-600">Typewriter</span>
        </h1>
        <p class="text-xl md:text-2xl text-secondary-600 max-w-4xl mx-auto mb-8 leading-relaxed">
          Experimental AI-generated social science research using US Census data. 
          A collaboration between humans and large language models to explore novel 
          hypotheses and analytical approaches.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/analyses/" class="bg-primary-600 hover:bg-primary-700 text-white px-8 py-3 rounded-lg font-semibold transition-all transform hover:scale-105 shadow-lg">
            Explore Analyses
          </a>
          <a href="/about/" class="bg-white hover:bg-secondary-50 text-secondary-700 px-8 py-3 rounded-lg font-semibold border border-secondary-200 transition-all">
            Learn More
          </a>
        </div>
      </div>
    </div>
    
    <!-- Background decoration -->
    <div class="absolute inset-0 -z-10">
      <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-primary-100 rounded-full mix-blend-multiply filter blur-xl opacity-70"></div>
      <div class="absolute top-1/3 right-1/4 w-64 h-64 bg-purple-100 rounded-full mix-blend-multiply filter blur-xl opacity-70"></div>
      <div class="absolute bottom-1/4 left-1/3 w-64 h-64 bg-green-100 rounded-full mix-blend-multiply filter blur-xl opacity-70"></div>
    </div>
  </section>

  <!-- Featured Analysis -->
  {featuredAnalysis && (
    <section class="py-16 px-4 sm:px-6 lg:px-8">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-secondary-900 mb-4">Featured Analysis</h2>
          <p class="text-lg text-secondary-600">Deep dive into our latest research</p>
        </div>
        
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden border border-secondary-100">
          <div class="md:flex">
            <div class="md:w-2/3 p-8 lg:p-12">
              <div class="flex items-center gap-3 mb-4">
                <span class={`px-3 py-1 text-sm font-medium rounded-full ${
                  featuredAnalysis.data.category === 'serious' ? 'bg-blue-100 text-blue-800' :
                  featuredAnalysis.data.category === 'exploratory' ? 'bg-green-100 text-green-800' :
                  'bg-purple-100 text-purple-800'
                }`}>
                  {featuredAnalysis.data.category}
                </span>
                <time class="text-secondary-500 text-sm">
                  {featuredAnalysis.data.date.toLocaleDateString('en-US', { 
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
              </div>
              
              <h3 class="text-2xl lg:text-3xl font-bold text-secondary-900 mb-4 leading-tight">
                {featuredAnalysis.data.title}
              </h3>
              
              <p class="text-lg text-secondary-600 mb-6 leading-relaxed">
                {featuredAnalysis.data.summary}
              </p>
              
              <a href={`/analyses/${featuredAnalysis.slug}/`} 
                 class="inline-flex items-center bg-primary-600 hover:bg-primary-700 text-white px-6 py-3 rounded-lg font-semibold transition-all transform hover:scale-105">
                Read Analysis
                <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </a>
            </div>
            
            <div class="md:w-1/3 bg-gradient-to-br from-primary-50 to-primary-100 p-8 flex items-center justify-center">
              <div class="text-center">
                <div class="w-24 h-24 bg-primary-600 rounded-full flex items-center justify-center mb-4 mx-auto">
                  <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                  </svg>
                </div>
                <p class="text-primary-700 font-semibold">AI-Generated Research</p>
                <p class="text-primary-600 text-sm mt-1">Using US Census Data</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Analysis Categories -->
  <section class="py-16 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-secondary-900 mb-4">Research Categories</h2>
        <p class="text-lg text-secondary-600">Explore different types of analyses and methodologies</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {Object.entries(categoryInfo).map(([key, info]) => {
          const categoryAnalyses = categorizedAnalyses[key];
          return (
            <div class={`${info.bgColor} ${info.borderColor} border-2 rounded-2xl p-8 hover:shadow-lg transition-all`}>
              <h3 class={`text-2xl font-bold ${info.textColor} mb-3`}>
                {info.title}
              </h3>
              <p class="text-secondary-600 mb-4">
                {info.description}
              </p>
              <div class="flex items-center justify-between">
                <span class="text-secondary-500 text-sm">
                  {categoryAnalyses.length} {categoryAnalyses.length === 1 ? 'analysis' : 'analyses'}
                </span>
                <a href={`/analyses/?category=${key}`} class={`text-${info.color} hover:text-opacity-80 font-semibold text-sm transition-colors`}>
                  View All â†’
                </a>
              </div>
            </div>
          );
        })}
      </div>
    </div>
  </section>

  <!-- Recent Analyses -->
  <section class="py-16 px-4 sm:px-6 lg:px-8 bg-white">
    <div class="max-w-7xl mx-auto">
      <div class="flex justify-between items-center mb-12">
        <div>
          <h2 class="text-3xl font-bold text-secondary-900 mb-4">Recent Analyses</h2>
          <p class="text-lg text-secondary-600">Latest research from the Census Monkey</p>
        </div>
        <a href="/analyses/" class="hidden sm:inline-flex items-center text-primary-600 hover:text-primary-700 font-semibold transition-colors">
          View All
          <svg class="ml-1 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {recentAnalyses.map((analysis) => (
          <article class="group cursor-pointer">
            <a href={`/analyses/${analysis.slug}/`} class="block">
              <div class="bg-secondary-50 rounded-2xl p-8 border border-secondary-200 hover:border-primary-300 hover:shadow-lg transition-all duration-300 h-full">
                <div class="flex items-center gap-2 mb-4">
                  <span class={`px-3 py-1 text-xs font-medium rounded-full ${
                    analysis.data.category === 'serious' ? 'bg-blue-100 text-blue-800' :
                    analysis.data.category === 'exploratory' ? 'bg-green-100 text-green-800' :
                    'bg-purple-100 text-purple-800'
                  }`}>
                    {analysis.data.category}
                  </span>
                  <time class="text-secondary-500 text-xs">
                    {analysis.data.date.toLocaleDateString('en-US', { 
                      month: 'short', 
                      day: 'numeric'
                    })}
                  </time>
                </div>
                
                <h3 class="text-xl font-bold text-secondary-900 mb-3 leading-tight group-hover:text-primary-600 transition-colors">
                  {analysis.data.title}
                </h3>
                
                <p class="text-secondary-600 leading-relaxed mb-4">
                  {analysis.data.summary}
                </p>
                
                {analysis.data.tags.length > 0 && (
                  <div class="flex flex-wrap gap-2">
                    {analysis.data.tags.slice(0, 3).map(tag => (
                      <span class="bg-secondary-200 text-secondary-700 px-2 py-1 text-xs rounded-full">
                        #{tag}
                      </span>
                    ))}
                  </div>
                )}
              </div>
            </a>
          </article>
        ))}
      </div>
      
      <div class="text-center mt-12 sm:hidden">
        <a href="/analyses/" class="inline-flex items-center bg-primary-600 hover:bg-primary-700 text-white px-6 py-3 rounded-lg font-semibold transition-all">
          View All Analyses
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  {sortedAnalyses.length === 0 && (
    <section class="py-16 px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <div class="bg-white rounded-2xl p-12 border border-secondary-200 shadow-sm">
          <div class="w-16 h-16 bg-secondary-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-secondary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-secondary-900 mb-4">No Analyses Available Yet</h3>
          <p class="text-lg text-secondary-600">
            The Census Monkey is still working on generating new research. Check back soon!
          </p>
        </div>
      </div>
    </section>
  )}
</BaseLayout>
